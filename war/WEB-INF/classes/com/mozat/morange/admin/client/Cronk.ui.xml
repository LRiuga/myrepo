<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:datepicker="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		td {
			text-align: center;
		}
	</ui:style>
	<g:HTMLPanel>
		<h2>皇冠炸人设置参加人数</h2>
		<table class="table table-bordered">
			<tr>
				<td>活动id</td>
				<td>皇冠活动id</td>
				<td>小皇冠过期时间</td>
				<td>手动输入</td>
				<td>保存</td>
			</tr>
			<tr>
				<td><g:TextBox ui:field="activityId" /></td>
				<td><g:TextBox ui:field="huangId" /></td>
				<td><datepicker:DateBox ui:field="toDate" /></td>
				<td><g:CheckBox ui:field="openCb"></g:CheckBox></td>
				<td><g:Button ui:field="saveBtn" styleName="style.important">保存</g:Button></td>
			</tr>
			<tr>
				<td>右边输入monetid</td>
				<td colspan='4'><g:TextArea ui:field="monetId" /></td>
			</tr>
			
			
		</table>
	</g:HTMLPanel>
</ui:UiBinder>