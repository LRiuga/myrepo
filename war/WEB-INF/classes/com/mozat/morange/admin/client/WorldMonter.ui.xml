<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	<ui:style>
		.important {
			font-weight: bold;
		}
		td {
			text-align:center;	
		}
	</ui:style>
	<g:HTMLPanel>
		<h2>世界打怪设置</h2>
		<table class="table table-bordered">
			<tr>
				<td>打怪持续天数</td>
				<td>每天打怪次数</td>
				<td>炸弹的类型</td>
				<td>活动id</td>
			</tr>
			<tr>
				<td><g:TextBox ui:field="date" /></td>
				<td><g:TextBox ui:field="time"></g:TextBox></td>
				<td><g:ListBox ui:field="weaponType"></g:ListBox></td>
				<td><g:TextBox ui:field="aid"></g:TextBox></td>
				 <td><!--<g:CheckBox ui:field="autoCb"></g:CheckBox>--></td> 
			</tr>
			<tr>
				<td colspan='3'><g:TextArea ui:field="monetidArea"></g:TextArea></td>
			    <td><g:Button ui:field="saveBtn" styleName="style.important">保存</g:Button></td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 