<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:datepicker="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		td {
			text-align:center;
			}
	</ui:style>
	<g:HTMLPanel>
		<table>
		<tr>
			<td>Rewards Setting</td>
		</tr>
		<tr>
			<td>activityId</td>
			<td><g:ListBox ui:field="activityId"></g:ListBox></td>
		</tr>
		<tr>
			<td>activityName</td>
			<td><g:TextBox ui:field="activityName"></g:TextBox></td>
		</tr>
		<tr>
			<td>Rank</td>
			<td><g:TextBox ui:field="rank"></g:TextBox></td>
		</tr>
		<tr>
			<td>Item Type</td>
			<td><g:ListBox ui:field="itemType"></g:ListBox></td>
		</tr>
		<tr>
			<td>Item Name</td>
			<td><g:ListBox ui:field="itemName"></g:ListBox></td>
		</tr>
		<tr>
			<td>Item Count</td>
			<td><g:TextBox ui:field="itemCount"></g:TextBox></td>
		</tr>
		<tr>
			<td>有效期，单位小时</td>
			<td><g:TextBox ui:field="expire"></g:TextBox></td>
		</tr>
		<tr>
			<td colspan="2"><g:Button ui:field="addRank" styleName="style.important"> add </g:Button></td>
		</tr>
	</table>
	<g:Label>Reward List</g:Label>
	<g:FlexTable borderWidth="1" cellPadding="1" cellSpacing="1"  ui:field="rank_flexTable" width="60%"  /><br/>
	<table width="60%"><tr width="60%"><td width="100%"><g:Button ui:field="confirm" styleName="style.important" >Confirm</g:Button></td></tr></table>
	</g:HTMLPanel>
</ui:UiBinder> 