<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font: bolder;
		}
		td {
			text-align:center;
			}
	</ui:style>
	<g:HTMLPanel>
		
		<g:HorizontalPanel  >
			<g:HTML styleName="style.important">Search By </g:HTML>
			<g:ListBox ui:field="searchType"  />
			<g:TextBox ui:field="searchKey" />
			<g:Button styleName="style.important" ui:field="serchBtn">Search</g:Button>
		</g:HorizontalPanel  >
		<table border='2px' class='offset1'>
			<tr>
				<td colspan='3'>User's Information</td>
			</tr>
			<tr>
				<td>Monetid</td>
				<td><g:TextBox ui:field="monetidBox" enabled="false"></g:TextBox></td>
				<td></td>
			</tr>
			<tr>
				<td>NickName</td>
				<td><g:TextBox ui:field="nickNameBox"></g:TextBox></td>
				<td><g:Button ui:field="nickNameBtn" styleName="style.important">Update</g:Button></td>
			</tr>
			<tr>
				<td>UserName</td>
				<td><g:TextBox ui:field="userNameBox" enabled="false"></g:TextBox></td>
				<td></td>
			</tr>
			<tr>
				<td>Password</td>
				<td><g:TextBox ui:field="passwordBox"></g:TextBox></td>
				<td><g:Button ui:field="passwordBtn" styleName="style.important">Update</g:Button></td>
			</tr>
			<tr>
				<td>VIP</td>
				<td><g:ListBox ui:field="vipList"></g:ListBox></td>
				<td><g:Button ui:field="vipBtn" styleName="style.important">Set</g:Button></td>
			</tr>
		</table>
	</g:HTMLPanel>	
		
</ui:UiBinder> 