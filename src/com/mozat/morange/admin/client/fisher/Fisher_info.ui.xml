<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font: bolder;
		}
		td {
			text-align:center;
			}
	</ui:style>
	<g:HTMLPanel>
	<g:HorizontalPanel  >
		<g:HTML styleName="style.important">Search By </g:HTML>
		<g:ListBox ui:field="searchType"  />
		<g:TextBox ui:field="searchKey" />
		<g:Button styleName="style.important" ui:field="serchBtn">Search</g:Button>
	</g:HorizontalPanel  >
	<table border='2px' class='offset1'>
			<tr>
				<td colspan='3'>User's Information</td>
			</tr>
			<tr>
				<td>Monetid</td>
				<td><g:TextBox ui:field="monetidBox" enabled="false"></g:TextBox></td>
				<td></td>
			</tr>
			<tr>
				<td>UserName</td>
				<td><g:TextBox ui:field="userNameBox" enabled="false"></g:TextBox></td>
				<td></td>
			</tr>
			<tr>
				<td>Gold</td>
				<td><g:TextBox ui:field="goldBox"></g:TextBox></td>
				<td><g:Button ui:field="goldBtn" styleName="style.important">Update</g:Button></td>
			</tr>
			<tr>
				<td>Pearl</td>
				<td><g:TextBox ui:field="pearlBox"></g:TextBox></td>
				<td><g:Button ui:field="pearlBtn" styleName="style.important">Update</g:Button></td>
			</tr>
			<tr>
				<td>sapphire</td>
				<td><g:TextBox ui:field="sapphireBox"></g:TextBox></td>
				<td><g:Button ui:field="sapphireBtn" styleName="style.important">Update</g:Button></td>
			</tr>
		</table>	
		</g:HTMLPanel>
</ui:UiBinder> 