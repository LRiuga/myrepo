<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:datepicker="urn:import:com.google.gwt.user.datepicker.client" >
	<ui:style>
		.important {
			font-weight: bold;
			
		}
		td {
			text-align:center;
			} 
	</ui:style>
	 <g:HTMLPanel>
	<table>
		<tr>
			<td>活动名称</td>
			<td><g:ListBox ui:field="activityList"></g:ListBox></td>
		</tr>
		<tr>
			<td><g:Label>开始展示时间</g:Label></td>
			<td><datepicker:DateBox ui:field="fromDate" /></td>
		</tr>
		<tr>
			<td><g:Label>结束展示时间</g:Label></td>
			<td><datepicker:DateBox ui:field="toDate" /></td>
		</tr>
		<tr>
			<td><g:Label>活动开始时间</g:Label></td>
			<td><datepicker:DateBox ui:field="beginDate" /></td>
		</tr>
		<tr>
			<td><g:Label>活动结束时间</g:Label></td>
			<td><datepicker:DateBox ui:field="endDate" /></td>
		</tr>
		<tr>
			<td><g:Label>ID</g:Label></td>
			<td><g:TextBox ui:field="activityId" enabled="false"/></td>
		</tr>
		<tr>
			<td ></td>
			<td><g:Button ui:field="saveBtn" styleName="style.important">Save</g:Button><span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
			<g:Button ui:field="editBtn" styleName="style.important">Edit</g:Button></td>
		</tr>
	</table>
	<hr/>
	 
	</g:HTMLPanel>
</ui:UiBinder> 